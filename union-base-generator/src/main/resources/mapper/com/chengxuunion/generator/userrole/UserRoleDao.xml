<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.chengxuunion.generator.business.userrole.dao.UserRoleDao">

    <!-- 结果集 -->
    <resultMap id="UserRoleResultMap" type="com.chengxuunion.generator.business.userrole.model.UserRole">
    
        <id column="id" property="id" />
        
        <result column="user_id" property="userId" />
        
        <result column="role_id" property="roleId" />
        
        <result column="create_date" property="createDate" />
        
        <result column="create_user_id" property="createUserId" />

        <association property="role" javaType="com.chengxuunion.generator.business.role.model.Role">
            <id column="role_id" property="id"/>
            <result column="role_name" property="roleName"/>
            <result column="role_code" property="roleCode"/>
        </association>
    
    </resultMap>

    <!-- 所有列名 -->
    <sql id="ALL_COLUMN">
        t.id,
        t.user_id,
        t.role_id,
        t.create_date,
        t.create_user_id
        
    </sql>

    <!-- 查询用户角色列表 -->
    <select id="listUserRole" resultMap="UserRoleResultMap">
        SELECT
            <include refid="ALL_COLUMN"/>
        FROM
            user_role t
    </select>

    <!-- 查询用户角色列表 -->
    <select id="listUserRoleByUserId" resultMap="UserRoleResultMap">
        SELECT
            <include refid="ALL_COLUMN"/>
            ,r.role_name
            ,r.role_code
        FROM
            user_role t
        LEFT JOIN role r ON r.id = t.role_id
        WHERE t.user_id = #{userId}
    </select>

    <!-- 根据主键查询单个用户角色对象 -->
    <select id="getUserRole" resultMap="UserRoleResultMap">
        SELECT
            <include refid="ALL_COLUMN"/>
        FROM
            user_role t
        WHERE
            t.id = #{id}
    </select>

    <!-- 保存用户角色对象 -->
    <insert id="saveUserRole" parameterType="com.chengxuunion.generator.business.userrole.model.UserRole">
        INSERT INTO
            user_role

        <trim prefix=" ( " suffix=" ) "  suffixOverrides=",">
        
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="roleId != null">role_id,</if>
            <if test="createDate != null">create_date,</if>
            <if test="createUserId != null">create_user_id,</if>
        
        </trim>
        <trim prefix=" VALUES( " suffix=" ) "  suffixOverrides=",">
        
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="roleId != null">#{roleId},</if>
            <if test="createDate != null">#{createDate},</if>
            <if test="createUserId != null">#{createUserId},</if>
        
        </trim>
    </insert>

    <!-- 批量保存用户角色 -->
    <insert id="saveUserRoleBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" separator=";">
            INSERT INTO
                user_role

            <trim prefix=" ( " suffix=" ) "  suffixOverrides=",">

                <if test="item.id != null">id,</if>
                <if test="item.userId != null">user_id,</if>
                <if test="item.roleId != null">role_id,</if>
                <if test="item.createDate != null">create_date,</if>
                <if test="item.createUserId != null">create_user_id,</if>

            </trim>
            <trim prefix=" VALUES( " suffix=" ) "  suffixOverrides=",">

                <if test="item.id != null">#{item.id},</if>
                <if test="item.userId != null">#{item.userId},</if>
                <if test="item.roleId != null">#{item.roleId},</if>
                <if test="item.createDate != null">#{item.createDate},</if>
                <if test="item.createUserId != null">#{item.createUserId},</if>

            </trim>
        </foreach>
    </insert>

    <!-- 更新用户角色对象 -->
    <update id="updateUserRole" parameterType="com.chengxuunion.generator.business.userrole.model.UserRole">
        UPDATE
            user_role
        <set>

            <if test="userId != null">user_id = #{userId},</if>
            
            <if test="roleId != null">role_id = #{roleId},</if>
            
            <if test="createDate != null">create_date = #{createDate},</if>

            <if test="createUserId != null">create_user_id = #{createUserId},</if>
        
        </set>
        WHERE
            id = #{id}
    </update>

    <!-- 根据主键删除用户角色 -->
    <delete id="deleteUserRole">
        DELETE FROM
            user_role
        WHERE
            id = #{id}
    </delete>

    <!-- 删除用户所有权限 -->
    <delete id="deleteUserRoleByUserId">
        DELETE FROM
            user_role
        WHERE
            user_id = #{userId}
    </delete>

</mapper>